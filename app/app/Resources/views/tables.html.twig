{#

{{ include('::tables.html.twig', {variant: 'red', caption: 'Nagy caption', users: managers, table_id: managers_table, buttons: buttons, search_placeholder: 'Search managers'}) }}

ahol:
variant: red|blue
checkbox: true|false
table_id: the id of the table tag
attributes: true|false

buttons array:

 ....
 "id1" => array(
    "class" => "btn-blue",
    "text" => "Revoke"
    ),
 "id2" => array(
    "class" => "btn-red",
    "last" => true,
    "text" => '<i class="glyphicon glyphicon-plus"></i>Invite'
    )
 ...

 ahol last: külön kezelt ikon, ami jobbra zárt, és mobil nézetben a search mellett marad, a többi egy sort lejjebb ugrik

#}

<script type="text/javascript">
    $(document).ready(function() {
        $('#{{ table_id }}').DataTable( {
            {% if buttons is defined %}
                "order": [[ 1, "desc" ]],
            {% endif %}
            "dom": 'trlip'
        });

        {# hide pagination if one page #}
        if ($('#{{ table_id }}').DataTable().page.info().pages == 1) {
            $('#{{ table_id }}_info').hide();
            $('#{{ table_id }}_paginate').hide();
            $('#{{ table_id }}_length').hide();
        }

        {# hide filter label (text: Search:) #}
        $('#{{ table_id }}_filter').children('label').contents().first().remove();
        $('#{{ table_id }}_filter input').addClass('hexaaSearchField');

        $('#{{ table_id }}_hexaaSearchField').on( 'keyup', function () {
            $('#{{ table_id }}').DataTable().search( this.value ).draw();
        } );

    });
</script>

    <div class="{{ table_id }}_actionButtons" style="margin-top: 12px;">
        
        <input class="hexaaCheckBox hidden-xs pull-left" type="checkbox" value="">
        <input id="{{ table_id }}_hexaaSearchField" type="text" name="filter" class="hexaaSearchField pull-left" {% if search_placeholder is defined %}placeholder="{{ search_placeholder }}"{% endif %}>
        {% if buttons is defined and buttons %}
            {% for id, button in buttons %}
                {% if not button.last is defined %}
                    <button class="btnhexaa {{ button.class }} hidden-xs" id="{{ id }}">{{ button.text|raw }}</button>                
                {% endif %}
            {% endfor %}
            {% for id, button in buttons %}
                {% if button.last is defined %}
                    <button class="btnhexaa {{ button.class }} pull-right" id="{{ id }}">{{ button.text|raw }}</button>                
                {% endif %}
            {% endfor %}
        {% endif %}

        {% if buttons is defined and buttons %}
            <div class="visible-xs" style="margin-top: 12px;">
                {% for id, button in buttons %}
                    {% if not button.last is defined %}
                        <button class="btnhexaa {{ button.class }}" id="{{ id }}">{{ button.text|raw }}</button>
                    {% endif %}      
                {% endfor %}
            </div>
            <div class="visible-xs" style="margin-top: 12px;">
                <input class="hexaaCheckBox" type="checkbox" value="">
            </div>
        {% endif %}
    </div>

<table class="datatable datatable-{{ variant }}" id="{{ table_id }}">
    <caption>{{ caption }}</caption>
    <thead>
     <tr>
            {% if checkbox %}
                <th></th>
            {% endif %}
            {% if attributes %}
                <th></th>
            {% else %}
                <th></th>
                <th></th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                {% if checkbox %}
                    <td><input type="checkbox" name="checkbox"></td>
                {% endif %}
                {% if attributes %}
                    <td><strong>{{user.name}}</strong></td> 
                {% else %}
                    <td><strong>{{user.display_name}}</strong></td>
                    <td>{{user.email}}</td>
                {% endif %}
            </tr>
        {% endfor %}
    </tbody>
</table>
