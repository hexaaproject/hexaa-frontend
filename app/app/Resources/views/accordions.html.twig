<script>
    function toggleAccordion(e) {
        e.classList.toggle("active");
        console.log($(e).next('.accordion-panel'));
        var panel = e.nextElementSibling;
        if (panel.style.display === "block") {
            panel.style.display = "none";
        } else {
            panel.style.display = "block";
        }
    }
</script>

<div class="accordion-container accordion-style-{{ variant }}">
    <div class="accordion-header">{{ heading }}</div>
    <div>
        {% for item in items %}
            <div onclick="toggleAccordion(this);" class="accordion-title accordion-title-style-{{ variant }}">{{item.title}}</div>
            <div class="accordion-panel accordion-panel-style-{{ variant }}">
                {% if item.subaccordions is defined %}
                    {% for subaccordion in item.subaccordions %}
                        <div class="accordion-container accordion-style-{{ subaccordion.variant }}">
                            
                            <div class="accordion-header"></div>
                            <div onclick="toggleAccordion(this);" class="accordion-title accordion-title-style-{{ subaccordion.variant }}">{{subaccordion.title}}
                                {% if subaccordion.buttons is defined %}
                                    <span class="accordion-buttons">
                                        {% for id, button in subaccordion.buttons %}
                                            <button {% if id is defined %} id="{{ id }}"{% endif %} class=" btn {% if button.class is defined %} {{ button.class }} {% endif %}">{{ button.text }}</button>
                                        {% endfor %}
                                    </span>
                                {% endif %}
                            </div>
                            <div class="accordion-panel accordion-panel-style-{{ subaccordion.variant }}">
                                <table cellspacing="0" class="accordion">
                                {% for content in subaccordion.contents %}
                                    <tr class="accordion">
                                        <td class="{% if not loop.first %}accordion-hr{% endif %} accordion accordion-key">{{content.key}}</td>
                                        <td class="{% if not loop.first %}accordion-hr{% endif %} accordion">
                                            <ul class="accordion">
                                                {% for listitem in content.values %}
                                                    <li>{{ listitem }}
                                                    {% endfor %}
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </table>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <table cellspacing="0" class="accordion">
                        {% for content in item.contents %}
                            <tr class="accordion">
                                <td class="{% if loop.index != 1 %}accordion-hr{% endif %} accordion accordion-key">{{content.key}}</td>
                                <td class="{% if loop.index != 1 %}accordion-hr{% endif %} accordion">
                                    <ul class="accordion">
                                        {% for listitem in content.values %}
                                            <li>{{ listitem }}
                                            {% endfor %}
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>