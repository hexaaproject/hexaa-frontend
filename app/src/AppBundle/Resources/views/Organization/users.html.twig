{% extends "AppBundle:Organization:layout.html.twig" %}

{% block container %}

    {% block stylesheets %}
        {% stylesheets 'css/tables.css' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}

    {% block javascripts %}    
        {% javascripts
            '@datatables_js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}

    {% if managers is defined and managers|length %}
    <div class="row">
        <div class="col-md-15">
            {{ include('::tables.html.twig', {variant: 'red', caption: 'Managers', checkbox: true, attributes: false, users: managers, table_id: 'managers_table', buttons: managers_buttons, search_placeholder: 'Search manager' }) }}
        </div>
    </div>
    {% endif %}

    {% if members is defined and members|length %}
    <div class="row" style="margin-top: 48px;">
        <div class="col-md-15">
            {{ include('::tables.html.twig', {variant: 'blue', caption: 'Members', checkbox: true, attributes: false, users: members, table_id: 'members_table', buttons: members_buttons, search_placeholder: 'Search member' }) }}            
        </div>
    </div>
    {% endif %}
{% endblock %}
