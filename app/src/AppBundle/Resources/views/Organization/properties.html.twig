{% extends "AppBundle:Organization:layout.html.twig" %}

{% block container %}
    {% block stylesheets %}
        {% stylesheets
            'css/accordions.css'
            'css/grid_panel.css'
        filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}

    {% javascripts
    '@typeahead_js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        $(document).ready(function() {
            if ("{{ action }}" == "edit") {
                edit();
            }
        });
    </script>

    <div class="row">
        <div class="col-sm-offset-2 col-sm-11">
                {{ include('::grid_panel.html.twig', {
                    heading: "Properties",
                    buttonappear: "inline",
                    main: entity,
                    items: propertiesbox,
                    changeedit: "property",
                    changebutton: "property_button",
                    panel_id: "1",
                    form: propertiesform,
                    })
                }}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-offset-2 col-sm-11" style="padding-top: 12px;">
            <div class="accordion-container-notform accordion-style-dark">
                {{ include('::accordions.html.twig', {
                    formaccordion: 'notform',
                    formtitle: 'notform',
                    formpanel: 'notform',
                    heading: "Roles",
                    variant: "dark",
                    items: roles
                    })
                }}
            </div>
        </div>
    </div>

{% endblock %}
