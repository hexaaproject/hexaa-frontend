{% extends "::base.html.twig" %}

{% block title %}Add organization{% endblock %}

{% block body %}
<h2>Create virtual organization</h2>
<form action="{{ path('app_organization_addsteptwo') }}" method="POST" role="form">
	<button type="submit" class="btn btn-primary">Next</button>
	<div class="progress" data-step="1">progressbar 1</div>
	<legend>Add meg a szervezeted alapadatait.</legend>

	<div class="form-group">
		<input type="text" class="form-control" id="" name="name" placeholder="Organization name">
	</div>
	<div class="form-group">
		<input type="text" class="form-control" id="" name="description" placeholder="Description">
	</div>
</form>
{% endblock %}