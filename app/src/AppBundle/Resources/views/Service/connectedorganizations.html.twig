        <script>
            $('#connected_org').DataTable({
                "columnDefs": [{
                    "targets": 0,
                    "orderable": false
                }],
                'aaSorting': [[1, 'asc']]
            });

            $('#connected_org_pending').DataTable({
                "columnDefs": [{
                    "targets": 0,
                    "orderable": false
                }],
                'aaSorting': [[1, 'asc']]
