{% extends "AppBundle:Service:layout.html.twig" %}

{% block container %}

    {% block stylesheets %}

        {% stylesheets
        '@datatables_css'
        'css/tables.css'
        filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% javascripts
        '@datatables_js' %}
