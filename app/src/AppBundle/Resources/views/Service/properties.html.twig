{% extends "AppBundle:Service:layout.html.twig" %}

{% block container %}

    {% block stylesheets %}
        {% stylesheets
            'css/panel.css'
            filter='cssrewrite'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}

    <form action="{{ path('app_service_properties', {id: service.id}) }}" method="POST" role="form">
        <div class="row">
            <div class="col-md-10 col-md-offset-2">
                {{ include('::panel.html.twig', { heading: "Properties", buttonappear: "inline", main: main, items: propertiesbox, changeedit:"property", changebutton:"property" }) }}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-10 col-md-offset-2">
                {{ include('::panel.html.twig', { heading: "Owner details", buttonappear: "inline", main: main, items: ownerbox, changeedit:"owner", changebutton:"owner" }) }}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-10 col-md-offset-2">
                {{ include('::panel.html.twig', { heading: "Privacy information", buttonappear: "inline", main: main, items: privacybox, changeedit:"privacy", changebutton:"privacy" }) }}
            </div>
        </div>
    </form>
{% endblock %}
