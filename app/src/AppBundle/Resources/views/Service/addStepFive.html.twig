{% extends "::base.html.twig" %}

{% block title %}Add service{% endblock %}

{% block stylesheets %}
    {% stylesheets 'css/createservice.css'
                    filter='cssrewrite' 
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <form action="{{ path('homepage') }}" method="POST" role="form">

        <div class="formcontainer" style="text-align:center; width:800px">
            <div class="header" style="height:50px">
                <div class="title pull-left" style="padding-top:10px">Create service </div>
                <button type="submit" class="btnhexaa btn-red btnhexaa-md pull-right">Finish</button>
            </div>
            <div class="progress" style="width:800px">
                <div class="progress-bar" role="progressbar" style="width:100%">
                </div>
            </div>
            <br>
            <div class="form-group" style="width:800px">
                <div style="color:#EA7373; font-weight:bold">A szolgáltatásod elkészült.</div>
                <br>
                <img src="/img/mosoly.PNG"></img>
            </div>
        </div>
    </form>
{% endblock %}